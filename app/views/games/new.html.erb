<h1>New game</h1>

<%= @letters %>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="newword">What is the longest word you can find?</label>
  <input type="text" id="newword" name="word">
  <input type="hidden" id="letters" name="letters" value= '<%= @letters.to_json %>'>

  <input type="submit" value="Play">
</form>
